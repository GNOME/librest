{
    "app-id" : "org.gnome.RestDemo",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "librest-demo",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "librest-demo",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/librest.git"
                }
            ],
            "config-opts" : [
                "-Dgtk_doc=false",
                "-Dsoup2=false"
            ],
            "build-options": {
                "test-args": [
                    "--share=network",
                    "--device=dri",
                    "--share=ipc",
                    "--socket=fallback-x11",
                    "--socket=wayland"
                ]
            }
        }
    ],
    "build-options" : {
        "env" : {        }
    }
}
